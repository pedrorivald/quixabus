<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Quixabus" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/colorPrimaryVariantDark</item>

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>

        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDark</item>

        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Quixabus" parent="Base.Theme.Quixabus" />

    <style name="H1TextViewColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NormalTextViewColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextFieldColor" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryVariantDark</item>
    </style>

    <style name="FloattingActionButtonColor" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondaryVariantDark</item>
        <item name="rippleColor">@color/colorSecondaryDark</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ButtonColor" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondaryVariantDark</item>
        <item name="rippleColor">@color/colorSecondaryDark</item>
    </style>

    <style name="CardBackgroundColor" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/colorOnPrimaryDark</item>
    </style>

    <style name="ScrollViewBackground">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="ToolbarColor" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:backgroundTint">@color/colorPrimaryVariantDark</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ExposedDropdownMenuColor" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimaryVariantDark</item>
    </style>
</resources>