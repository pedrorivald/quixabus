<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Quixabus" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/colorSecondaryVariant</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Quixabus" parent="Base.Theme.Quixabus" />

    <style name="H1TextViewColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="NormalTextViewColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextFieldColor" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="FloattingActionButtonColor" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondaryVariant</item>
        <item name="rippleColor">@color/colorSecondary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ButtonColor" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorSecondaryVariant</item>
        <item name="rippleColor">@color/colorSecondary</item>
    </style>

    <style name="ButtonTextColor" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="ButtonTextDangerColor" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorDelete</item>
    </style>

    <style name="CardBackgroundColor" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/colorOnPrimary</item>
    </style>

    <style name="ScrollViewBackground">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ToolbarColor" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:backgroundTint">@color/colorSecondaryVariant</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ExposedDropdownMenuColor" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimaryVariant</item>
    </style>

</resources>