<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    style="@style/ScrollViewBackground">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/activity_links_fragment_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        app:iconGravity="textStart"
        android:textSize="16sp"
        app:iconSize="30dp"
        android:clickable="true"
        android:focusable="true"
        app:icon= "@drawable/action_link"
        style="@style/ButtonColor"
        android:text="MOODLE"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonMoodle"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_links_fragment_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        app:iconGravity="textStart"
        android:textSize="16sp"
        app:iconSize="30dp"
        android:clickable="true"
        android:focusable="true"
        app:icon= "@drawable/action_link"
        style="@style/ButtonColor"
        android:text="RU"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonRU"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonMoodle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        app:iconGravity="textStart"
        android:textSize="16sp"
        app:iconSize="30dp"
        android:clickable="true"
        android:focusable="true"
        app:icon= "@drawable/action_link"
        style="@style/ButtonColor"
        android:text="SIGAA"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonSigaa"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonRU"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        app:iconGravity="textStart"
        android:textSize="16sp"
        app:iconSize="30dp"
        android:clickable="true"
        android:focusable="true"
        app:icon= "@drawable/action_link"
        style="@style/ButtonColor"
        android:text="SIPPA"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonSippa"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonSigaa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        app:iconGravity="textStart"
        android:textSize="16sp"
        app:iconSize="30dp"
        android:clickable="true"
        android:focusable="true"
        app:icon= "@drawable/action_link"
        style="@style/ButtonColor"
        android:text="UFC QUIXADÁ"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonUFC"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonSippa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>